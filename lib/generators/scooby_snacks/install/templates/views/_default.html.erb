<% property = ScoobySnacks::METADATA_SCHEMA['work_types'][curation_concern.model_name.to_s.downcase]['properties'][key.to_s] %>
<% unless property.nil?  %>
    <% options = {required: property['required'] == "true"} %>
    <% options[:label] = property['label'] unless property.nil? %>
    <% options[:hint] = property['hint'] if property['hint'] %>
    <% input_type = property['input'] %>
    <% input_type = 'scalar' if input_type == "default" %>
    <%= render partial: "records/edit_fields/#{input_type}", locals: {property: property, f: f, options: options, key: key}  %>
<% else %>
    <%= "model_name: #{curation_concern.model_name.to_s.downcase}, key: #{key}, propertes: #{ScoobySnacks::METADATA_SCHEMA['work_types'][curation_concern.model_name.to_s.downcase]['properties']['title']}"%>  
<% end %>
